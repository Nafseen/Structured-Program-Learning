#include <stdio.h>

// Function prototype declaration
void printChar(char c);

int main() {
    char c;

    // Ask the user for a character c
    printf("Enter a character: ");
    scanf(" %c", &c); // Note the space before %c to consume any leftover whitespace

    // Call the function to print the character
    printChar(c);

    return 0; // Return 0 to indicate successful completion
}

// Function to print the character received from main
void printChar(char c) {
    printf("Value received from main: %c\n", c); // Print the character
}
